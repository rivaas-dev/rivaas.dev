{
  "name": "rivaas.dev",
  "version": "1.0.0",
  "description": "Official landing page for Rivaas - High-performance API framework for Go",
  "scripts": {
    "build:scss": "sass src/styles/main.scss dist/styles/main.css --style=compressed --no-source-map",
    "build:html": "cp src/index.html dist/",
    "build": "npm run build:scss && npm run build:html",
    "watch:scss": "sass src/styles/main.scss dist/styles/main.css --watch",
    "watch:html": "nodemon --watch src/index.html --exec 'npm run build:html'",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "npx http-server dist -p 8080 -c-1",
    "dev": "npm-run-all build --parallel watch serve",
    "clean": "rm -rf dist && mkdir -p dist/styles"
  },
  "devDependencies": {
    "sass": "^1.70.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rivaas-dev/rivaas.dev.git"
  },
  "keywords": [
    "go",
    "golang",
    "api",
    "framework",
    "landing-page"
  ],
  "author": "Rivaas Contributors",
  "license": "Apache-2.0"
}
